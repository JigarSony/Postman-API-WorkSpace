			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "e5b3fd12-7032-4a5e-99f6-b82ff7f9d0f9",
						"exec": [
							"const customerId = Math.floor(Math.random()*100 + 1);",
							"console.log(customerId);",
							"",
							"pm.globals.set(\"customerId\", customerId);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "777a6e9d-41b8-4a65-8117-755666660163",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"    var jsonData = pm.response.json();",
							"pm.test(\"Check CustomerID\", function () {",
							"    pm.expect(jsonData.json.customerId).to.eql(pm.globals.get(\"customerId\"));",
							"});",
							"",
							"pm.test(\"Check ProductID\", function () {",
							"    pm.expect(jsonData.json.products[0].productId).to.eql(3000);",
							"    pm.expect(jsonData.json.products[1].productId).to.eql(2000);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
