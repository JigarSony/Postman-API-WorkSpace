					"raw": "{\n\t\"orderId\": \"{{orderId}}\",\n\t\"customerId\":{{customerId}},\n\t\"products\":[\n\t\t{\n\t\t\t\"quantity\": {{$randomInt}},\n\t\t\t\"productId\": 3000\n\t\t},\n\t\t{\n\t\t\t\"quantity\":{{$randomInt}},\n\t\t\t\"productId\": 2000\n\t\t}\n\t]\n}"
